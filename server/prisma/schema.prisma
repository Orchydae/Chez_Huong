generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  VISITOR
  EDITOR
  MODERATOR
  ADMIN
}

model User {
  id           String    @id @default(uuid())
  firstName    String
  lastName     String
  email        String    @unique
  passwordHash String
  role         Role      @default(VISITOR)
  recipes      Recipe[]
  favorites    Recipe[]  @relation("UserFavorites")
  reviews      Review[]
  comments     Comment[]
}

model Review {
  rating    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  recipe    Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  recipeId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([userId, recipeId]) // Composite primary key
  @@index([recipeId])
  @@index([userId])
}

model Comment {
  id        Int       @id @default(autoincrement())
  content   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [id])
  userId    String
  recipe    Recipe    @relation(fields: [recipeId], references: [id])
  recipeId  Int
  comments  Comment[] @relation("CommentToComment")
  parent    Comment?  @relation("CommentToComment", fields: [parentId], references: [id])
  parentId  Int?

  @@index([parentId])
  @@index([recipeId])
  @@index([userId])
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

model Particularity {
  id                     Int                   @id @default(autoincrement())
  name                   String                @unique
  particularitiesRecipes ParticularityRecipe[]
}

model ParticularityRecipe {
  particularity   Particularity @relation(fields: [particularityId], references: [id], onDelete: Restrict)
  particularityId Int
  recipe          Recipe        @relation(fields: [recipeId], references: [id], onDelete: Restrict)
  recipeId        Int

  @@id([particularityId, recipeId])
}

model Recipe {
  id          Int        @id @default(autoincrement())
  title       String
  description String
  difficulty  Difficulty @default(MEDIUM)
  prepTime    Int
  cookTime    Int
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  author      User       @relation(fields: [authorId], references: [id])
  authorId    String
  favoritedBy User[]     @relation("UserFavorites")

  particularitiesRecipes ParticularityRecipe[]
  ingredientsInstances   IngredientInstance[]
  segments               Segment[]
  reviews                Review[]
  comments               Comment[]
  categoryRecipes        CategoryRecipe[]

  @@index([authorId])
  @@index([createdAt])
}

model CategoryRecipe {
  recipe     Recipe   @relation(fields: [recipeId], references: [id], onDelete: Restrict)
  recipeId   Int
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  categoryId Int

  @@id([categoryId, recipeId])
}

model Category {
  id              Int              @id @default(autoincrement())
  name            String           @unique
  categoryRecipes CategoryRecipe[]
}

model Segment {
  id               Int               @id @default(autoincrement())
  recipe           Recipe            @relation(fields: [recipeId], references: [id])
  recipeId         Int
  instructionSteps InstructionStep[]
}

model InstructionStep {
  id          Int     @id @default(autoincrement())
  stepNumber  Int
  description String
  media       String? @db.Text // e.g., Cloudinary/Supabase URL
  mediaAlt    String? @db.Text // Alternative text for the media
  segment     Segment @relation(fields: [segmentId], references: [id])
  segmentId   Int

  @@unique([segmentId, stepNumber]) // Unique constraint for segmentId and stepNumber
  @@index([segmentId])
}

enum IngredientSource {
  LOCAL
  USDA
}

model Ingredient {
  id        Int              @id @default(autoincrement())
  name      String           @unique
  unit      String
  source    IngredientSource @default(LOCAL)
  fdcId     Int?             @unique
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  IngredientInstance IngredientInstance[]
  IngredientNutrient IngredientNutrient[]
}

model IngredientInstance {
  id           Int      @id @default(autoincrement())
  ingredientId Int
  recipeId     Int
  quantity     Decimal? // This means the quantity can have up to 10 digits, with 3 of them after the decimal point
  unit         String?
  grams        Decimal?

  recipe     Recipe     @relation(fields: [recipeId], references: [id])
  ingredient Ingredient @relation(fields: [ingredientId], references: [id])

  @@index([recipeId])
  @@index([ingredientId])
}

model IngredientNutrient {
  ingredientId  Int
  nutrientId    Int
  amountPer100g Decimal

  ingredient Ingredient @relation(fields: [ingredientId], references: [id])
  nutrient   Nutrient   @relation(fields: [nutrientId], references: [id])

  @@id([ingredientId, nutrientId])
}

model Nutrient {
  id                   Int                  @id @default(autoincrement())
  usdaId               Int?                 @unique
  name                 String               @unique
  unit                 String
  ingredientsNutrients IngredientNutrient[]
}
